<config>
    <modules>
        <IntegerNet_Varnish>
            <version>1.0.0</version>
        </IntegerNet_Varnish>
    </modules>
    <global>
        <helpers>
            <integernet_varnish>
                <class>IntegerNet_Varnish_Helper</class>
            </integernet_varnish>
        </helpers>
        <blocks>
            <integernet_varnish>
                <class>IntegerNet_Varnish_Block</class>
            </integernet_varnish>
            <core>
                <rewrite>
                    <messages>IntegerNet_Varnish_Block_Rewrite_Core_Messages</messages>
                </rewrite>
            </core>
        </blocks>
        <models>
            <integernet_varnish>
                <class>IntegerNet_Varnish_Model</class>
                <resourceModel>integernet_varnish_resource</resourceModel>
            </integernet_varnish>
            <integernet_varnish_resource>
                <class>IntegerNet_Varnish_Model_Resource</class>
                <entities>
                    <index>
                        <table>integernet_varnish_index</table>
                    </index>
                </entities>
            </integernet_varnish_resource>
            <enterprise_catalog>
                <rewrite>
                    <urlrewrite_matcher_category>IntegerNet_Varnish_Model_Urlrewrite_Matcher_Category</urlrewrite_matcher_category>
                    <urlrewrite_matcher_product>IntegerNet_Varnish_Model_Urlrewrite_Matcher_Product</urlrewrite_matcher_product>
                </rewrite>
            </enterprise_catalog>
        </models>
        <resources>
            <integernet_varnish_setup>
                <setup>
                    <module>IntegerNet_Varnish</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </integernet_varnish_setup>
        </resources>
        <events>
            <model_save_after>
                <observers>
                    <integernet_varnish>
                        <class>integernet_varnish/observer</class>
                        <method>resourceChange</method>
                    </integernet_varnish>
                </observers>
            </model_save_after>
            <model_delete_before>
                <observers>
                    <integernet_varnish>
                        <class>integernet_varnish/observer</class>
                        <method>resourceChange</method>
                    </integernet_varnish>
                </observers>
            </model_delete_before>
        </events>
        <integernet_varnish>
            <invalidate>
                <response>
                    <checkout>integernet_varnish/invalidate_response_checkout</checkout>
                    <compare>integernet_varnish/invalidate_response_compare</compare>
                    <currency>integernet_varnish/invalidate_response_currency</currency>
                    <customer>integernet_varnish/invalidate_response_customer</customer>
                    <message>integernet_varnish/invalidate_response_message</message>
                    <poll>integernet_varnish/invalidate_response_poll</poll>
                    <recently_compared>integernet_varnish/invalidate_response_recentlyCompared</recently_compared>
                    <recently_viewed>integernet_varnish/invalidate_response_recentlyViewed</recently_viewed>
                    <store>integernet_varnish/invalidate_response_store</store>
                    <category>integernet_varnish/invalidate_response_category</category>
                </response>
                <resource>
                    <product>integernet_varnish/invalidate_resource_product</product>
                    <stock>integernet_varnish/invalidate_resource_stock</stock>
                    <category>integernet_varnish/invalidate_resource_category</category>
                    <cms>integernet_varnish/invalidate_resource_cms</cms>
                </resource>
            </invalidate>
        </integernet_varnish>
        <ignore_user_agents>
            <varnish1>varnish_build</varnish1>
        </ignore_user_agents>
        <external_cache>
            <controls>
                <integernet_varnish translate="label" module="integernet_varnish">
                    <label>Varnish by IntegerNet Module</label>
                    <class>integernet_varnish/control_varnish</class>
                </integernet_varnish>
            </controls>
        </external_cache>
    </global>
    <crontab>
        <jobs>
            <integernet_varnish_index_build>
                <schedule>
                    <cron_expr>*/5 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>integernet_varnish/index_build::build</model>
                </run>
            </integernet_varnish_index_build>
            <integernet_varnish_index_purge>
                <schedule>
                    <cron_expr>*/5 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>integernet_varnish/index_purge::purgeSchedule</model>
                </run>
            </integernet_varnish_index_purge>
        </jobs>
    </crontab>
    <adminhtml>
        <layout>
            <updates>
                <integernet_varnish>
                    <file>integernet_varnish.xml</file>
                </integernet_varnish>
            </updates>
        </layout>
        <translate>
            <modules>
                <IntegerNet_Varnish>
                    <files>
                        <default>IntegerNet_Varnish.csv</default>
                    </files>
                </IntegerNet_Varnish>
            </modules>
        </translate>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <integernet_varnish before="Mage_Adminhtml">IntegerNet_Varnish_Adminhtml</integernet_varnish>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <frontend>
        <layout>
            <updates>
                <integernet_varnish>
                    <file>integernet_varnish.xml</file>
                </integernet_varnish>
            </updates>
        </layout>
        <routers>
            <integernet_varnish>
                <use>standard</use>
                <args>
                    <module>IntegerNet_Varnish</module>
                    <frontName>integernetvarnish</frontName>
                </args>
            </integernet_varnish>
        </routers>
        <events>
            <controller_action_predispatch>
                <observers>
                    <pagecache>
                        <type>disabled</type>
                    </pagecache>
                    <integernet_varnish>
                        <class>integernet_varnish/observer</class>
                        <method>controllerActionPredispatch</method>
                    </integernet_varnish>
                </observers>
            </controller_action_predispatch>
            <controller_action_postdispatch>
                <observers>
                    <integernet_varnish>
                        <class>integernet_varnish/observer</class>
                        <method>controllerActionPostdispatch</method>
                    </integernet_varnish>
                </observers>
            </controller_action_postdispatch>
            <core_block_abstract_to_html_after>
                <observers>
                    <integernet_varnish>
                        <class>integernet_varnish/observer</class>
                        <method>coreBlockAbstractToHtmlAfter</method>
                    </integernet_varnish>
                </observers>
            </core_block_abstract_to_html_after>
        </events>
    </frontend>
    <default>
