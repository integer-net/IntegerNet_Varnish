<config>
    <modules>
        <IntegerNet_Varnish>
            <version>1.0.0.0</version>
        </IntegerNet_Varnish>
    </modules>
    <global>
        <helpers>
            <integernet_varnish>
                <class>IntegerNet_Varnish_Helper</class>
            </integernet_varnish>
        </helpers>
        <blocks>
            <integernet_varnish>
                <class>IntegerNet_Varnish_Block</class>
            </integernet_varnish>
            <core>
                <rewrite>
                    <messages>IntegerNet_Varnish_Block_Rewrite_Core_Messages</messages>
                </rewrite>
            </core>
        </blocks>
        <models>
            <integernet_varnish>
                <class>IntegerNet_Varnish_Model</class>
                <resourceModel>integernet_varnish_resource</resourceModel>
            </integernet_varnish>
            <integernet_varnish_resource>
                <class>IntegerNet_Varnish_Model_Resource</class>
                <entities>
                    <index>
                        <table>integernet_varnish_index</table>
                    </index>
                </entities>
            </integernet_varnish_resource>
        </models>
        <resources>
            <integernet_varnish_setup>
                <setup>
                    <module>IntegerNet_Varnish</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </integernet_varnish_setup>
        </resources>
        <events>
            <catalog_product_save_after>
                <observers>
                    <integernet_varnish>
                        <class>integernet_varnish/observer</class>
                        <method>catalogProductSaveAfter</method>
                    </integernet_varnish>
                </observers>
            </catalog_product_save_after>
            <cataloginventory_stock_item_save_after>
                <observers>
                    <integernet_varnish>
                        <class>integernet_varnish/observer</class>
                        <method>cataloginventoryStockItemSaveAfter</method>
                    </integernet_varnish>
                </observers>
            </cataloginventory_stock_item_save_after>
        </events>
        <integernet_varnish>
            <invalidate>
                <checkout>integernet_varnish/invalidate_checkout</checkout>
                <compare>integernet_varnish/invalidate_compare</compare>
                <currency>integernet_varnish/invalidate_currency</currency>
                <customer>integernet_varnish/invalidate_customer</customer>
                <message>integernet_varnish/invalidate_message</message>
                <poll>integernet_varnish/invalidate_poll</poll>
                <recently_compared>integernet_varnish/invalidate_recentlyCompared</recently_compared>
                <recently_viewed>integernet_varnish/invalidate_recentlyViewed</recently_viewed>
                <store>integernet_varnish/invalidate_store</store>
            </invalidate>
        </integernet_varnish>
    </global>
    <crontab>
        <jobs>
            <integernet_varnish_build>
                <schedule>
                    <cron_expr>*/10 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>integernet_varnish/build::build</model>
                </run>
            </integernet_varnish_build>
        </jobs>
    </crontab>
    <adminhtml>
        <layout>
            <updates>
                <pagecache>
                    <file>integernet_varnish.xml</file>
                </pagecache>
            </updates>
        </layout>
    </adminhtml>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <integernet_varnish before="Mage_Adminhtml">IntegerNet_Varnish_Adminhtml</integernet_varnish>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <frontend>
        <layout>
            <updates>
                <integernet_varnish>
                    <file>integernet_varnish.xml</file>
                </integernet_varnish>
            </updates>
        </layout>
        <routers>
            <integernet_varnish>
                <use>standard</use>
                <args>
                    <module>IntegerNet_Varnish</module>
                    <frontName>integernetvarnish</frontName>
                </args>
            </integernet_varnish>
        </routers>
        <events>
            <controller_action_predispatch>
                <observers>
                    <pagecache>
                        <class>integernet_varnish/observer</class>
                        <method>controllerActionPredispatch</method>
                    </pagecache>
                </observers>
            </controller_action_predispatch>
            <controller_action_layout_load_before>
                <observers>
                    <integernet_varnish>
                        <class>integernet_varnish/observer</class>
                        <method>controllerActionLayoutLoadBefore</method>
                    </integernet_varnish>
                </observers>
            </controller_action_layout_load_before>
            <core_block_abstract_to_html_before>
                <observers>
                    <integernet_varnish>
                        <class>integernet_varnish/observer</class>
                        <method>coreBlockAbstractToHtmlBefore</method>
                    </integernet_varnish>
                </observers>
            </core_block_abstract_to_html_before>
        </events>
    </frontend>
    <default>
        <system>
            <integernet_varnish>
                <enable>1</enable>
                <cache_routes>a:3:{s:18:"_1380016309113_113";a:2:{s:5:"route";s:7:"cms/*/*";s:8:"lifetime";s:5:"86400";}s:18:"_1380795552806_806";a:2:{s:5:"route";s:20:"catalog/product/view";s:8:"lifetime";s:5:"86400";}s:18:"_1380795553675_675";a:2:{s:5:"route";s:21:"catalog/category/view";s:8:"lifetime";s:5:"86400";}}</cache_routes>
                <hole_punching>1</hole_punching>
                <disqualified_states>checkout,compare,currency,customer,message,poll,recently_compared,recently_viewed,store</disqualified_states>
                <disqualified_params>a:3:{s:17:"_1380796233099_99";a:1:{s:5:"param";s:8:"___store";}s:18:"_1380796344807_807";a:1:{s:5:"param";s:6:"___SID";}s:18:"_1380796371849_849";a:1:{s:5:"param";s:13:"___from_store";}}</disqualified_params>
                <bypass_states>currency,store</bypass_states>
                <purge_server><![CDATA[127.0.0.1]]></purge_server>
                <debug_mode>1</debug_mode>
            </integernet_varnish>
        </system>
    </default>
</config>