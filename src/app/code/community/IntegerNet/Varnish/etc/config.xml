                <integernet_varnish_build_user_agent>IntegerNet_Varnish_Build</integernet_varnish_build_user_agent>
                <integernet_varnish_debug_mode>1</integernet_varnish_debug_mode>
            </external_page_cache>
        </system>
    </default>
</config>